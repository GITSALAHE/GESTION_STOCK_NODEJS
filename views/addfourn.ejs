<body>
    <nav class="navbar navbar-light bg-dark">
        <a class="navbar-brand d-flex" href="/">
          <img src="logo.png" width="w-100" height="100" alt="">
        </a>
        <div class="container d-flex justify-content-center align-content-center">
            <div class="row ">
                <h1 style="color: #fff; margin-right: 72px;">App Gestion stock</h1>
            </div>
        </div>
      </nav>
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>
    <div class="container">
        <div class="row d-flex justify-content-center">
            <h1 style="color: #fff;">Ajouter un Fournisseur</h1>
        </div>
    </div>

    <div class="container">
        <div class="row d-flex justify-content-center">
            <form method="POST" action="/addfourn" class="form">
                <div class="form-group">
                    <label>Nom du Fournisseur</label>
                    <input placeholder="nom" name="nomfour" class="input" id="nom" type="text">
                </div>
    
                <div class="form-group">
                    <label>Email</label>
                    <input placeholder="Mail" name="mail" class="input" id="prenom" type="text">
                </div>
                <div class="form-group">
                    <label>Telephone</label>
                    <input placeholder="Tele" name="tele" class="input" id="age" type="number">
                </div>                          
                <div class="container d-flex justify-content-center">
                    <input class="btn btn-success" type="submit" value="soumettre">
                </div>
            </form>
        </div>
    </div>




    <div class="container">
        <div class="row justify-content-center">
            <a style="margin-top: 10px;" type="button" href="/fournisseur"  class="btn btn-success">Fournisseurs</a>
        </div>
    </div>

      

